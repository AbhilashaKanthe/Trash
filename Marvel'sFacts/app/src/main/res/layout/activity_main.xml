<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abhilasha.marvelsfacts.activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?android:attr/actionBarSize"
        android:titleTextColor="@android:color/background_dark"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/background_dark">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <com.example.abhilasha.marvelsfacts.views.DrawerNavigationListView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/drawer"
            android:layout_gravity="start"
            android:background="@android:color/background_dark">



        </com.example.abhilasha.marvelsfacts.views.DrawerNavigationListView>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
